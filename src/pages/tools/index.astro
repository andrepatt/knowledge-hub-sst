---
import tools from "@/components/content/tools.json";
import MainLayout from "@/layouts/main-layout.astro";
import ToolCard from "@/components/cards/tool-card.astro";
---

<MainLayout title="Tools">
  <section class="relative z-20 max-w-6xl mx-auto my-12 px-7 lg:px-0">
    <div>
      <h1 class="inline-block font-heading text-4xl pb-2">
        Strumenti e Risorse Utili di Gen AI
      </h1>
      <p class="text-muted-foreground">
        Scopri i migliori tools per supportarti nel tuo lavoro
      </p>
    </div>
    <hr class="my-4" />

    <!-- Barra di ricerca -->
    <div class="my-6 flex">
      <input
        type="text"
        placeholder="Cerca un tool (coming soon)"
        class="w-full px-4 py-3 text-sm border border-neutral-300 rounded-l-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 dark:border-neutral-600"
      />
      <button
        class="px-6 py-3 text-sm font-medium text-white bg-black rounded-r-lg hover:bg-gray-800 transition-all"
        disabled
      >
        Cerca
      </button>
    </div>

    <!-- Lista di tool -->
    <div
      class="z-50 grid items-stretch w-full grid-cols-1 my-8 gap-7 sm:gap-5 sm:grid-cols-2 lg:grid-cols-3"
    >
      {tools.map((tool) => (
        <ToolCard
          name={tool.name}
          description={tool.description}
          image={tool.image}
          url={tool.url}
        />
      ))}
    </div>
  </section>
</MainLayout>
