---
import { Icon } from "astro-icon/components"
import { Image } from "astro:assets"
import type { CollectionEntry } from "astro:content"

type Props = CollectionEntry<"projects">

const { data, slug } = Astro.props;
---

<div class="group relative overflow-hidden rounded-xl bg-gradient-to-br from-white to-zinc-50 border border-zinc-200 hover:border-zinc-300 transition-all duration-500 hover:shadow-xl">
  <a href={`/projects/${slug}/`} class="block">
    <div class="relative aspect-[21/9] overflow-hidden">
      <Image
        src={data.cover}
        alt={data.title}
        width={800}
        height={450}
        class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
      />
      {data.category && (
        <span class="absolute top-3 right-3 px-3 py-1 text-xs font-semibold tracking-wide bg-black text-white rounded-full transform transition-transform duration-300 group-hover:scale-105">
          {data.category}
        </span>
      )}
    </div>

    <div class="p-4">
      <time class="block text-sm text-zinc-500 mb-1">
        {data.pubDate}
      </time>

      <h2 class="text-lg font-bold bg-gradient-to-r from-zinc-900 to-zinc-600 bg-clip-text text-transparent mb-1.5 line-clamp-1">
        {data.title}
      </h2>

      <p class="text-sm text-zinc-600 mb-3 line-clamp-2">
        {data.description}
      </p>

      <div class="flex items-center text-sm text-blue-500 font-medium group/link">
        Scopri di pi√π
        <Icon
          name="lucide:arrow-right"
          class="ml-2 w-4 h-4 transition-transform duration-300 group-hover/link:translate-x-1"
        />
      </div>
    </div>
  </a>
</div>
