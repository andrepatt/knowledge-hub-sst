---
// Estrai le propriet√† necessarie dai props
const { name, description, url, image } = Astro.props;
---

<a
  href={url}
  target="_blank"
  class="relative flex flex-col items-center duration-300 ease-out p-6 sm:p-5 group h-full rounded-2xl shadow-md bg-white dark:bg-neutral-800 hover:shadow-lg hover:-translate-y-2 transition-all transform"
>
  <!-- Icona in un box a cerchio -->
  <div class="w-20 h-20 flex items-center justify-center bg-blue-100 dark:bg-neutral-700 rounded-full shadow-md mb-4">
    <img src={image} alt={`Icona di ${name}`} class="w-10 h-10 object-cover rounded-full" />
  </div>

  <!-- Titolo e Descrizione -->
  <div class="w-full text-center">
    <h3 class="text-xl font-bold text-neutral-900 dark:text-neutral-100 mb-2">
      {name}
    </h3>
    <p class="text-sm text-neutral-600 dark:text-neutral-400 mb-4 leading-relaxed">
      {description}
    </p>

    <!-- Pulsante -->
    <button
      class="px-6 py-3 text-sm font-medium text-white bg-blue-500 rounded-lg hover:bg-blue-600 dark:bg-blue-700 dark:hover:bg-blue-600 transition-all transform hover:scale-105"
    >
      Vai al Tool
    </button>
  </div>
</a>
